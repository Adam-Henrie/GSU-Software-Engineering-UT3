<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <ImageButton
        android:id="@+id/walmart"
        android:layout_width="237dp"
        android:layout_height="67dp"
        android:layout_marginRight="132dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/walmart"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/target" />

    <ImageButton
        android:id="@+id/target"
        android:layout_width="104dp"
        android:layout_height="90dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/target_logo" />

    <ImageButton
        android:id="@+id/taco_bell"
        android:layout_width="85dp"
        android:layout_height="96dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/walmart"
        app:srcCompat="@drawable/taco_bell" />

    <TextView
        android:id="@+id/tv_explaination_app"
        android:layout_width="354dp"
        android:layout_height="36dp"
        android:layout_marginBottom="16dp"
        android:shadowColor="@color/purple_200"
        android:text="Click a store to go to its inventory. The cart is accessible in the top right hamburger menu."
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>